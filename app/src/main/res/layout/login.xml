<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
      <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user" />
      
    

    <EditText
        android:id="@+id/editname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="邮箱账号或手机号码"
        android:ems="10"
        android:inputType="textPersonName" >

        <requestFocus />
    </EditText>
 </LinearLayout>
 
     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:orientation="horizontal">

         <ImageView
             android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
             android:src="@drawable/psw" />
         
       
          <EditText
              android:id="@+id/editpassword"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="密码"
              android:layout_weight="1"
              android:ems="10"
              android:inputType="textPassword" />
    
    </LinearLayout>
    
     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="30dp"
    android:gravity="center"
    android:orientation="horizontal">

         <Button
             android:id="@+id/logins"
             android:layout_width="100dp"
             android:layout_height="40dp"
             android:background="#e6e6e6"
             android:text="登入" />
         
               <Button
             android:id="@+id/youke"
             android:layout_width="100dp"
             android:layout_height="40dp"
             android:background="#e6e6e6"
             android:layout_marginLeft="10dp"
             android:text="游客模式" />

         
          
     </LinearLayout>
     
      <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
         
           <TextView
              android:id="@+id/textView1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="你还可以选择以下方式登入" />
         
     
         
    </LinearLayout>
    
     <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:orientation="horizontal">

         <ImageView
             android:id="@+id/imagewx"
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_weight="1"
             android:src="@drawable/weixin" />
         

         <ImageView
             android:id="@+id/imagewb"
             android:layout_width="40dp"
             android:layout_height="40dp"
              android:layout_weight="1"
             android:src="@drawable/weibo"
              />

         <ImageView
             android:id="@+id/imageQQ"
             android:layout_width="40dp"
             android:layout_height="40dp"
              android:layout_weight="1"
             android:src="@drawable/qq" />

    </LinearLayout>
    
      <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
     
            <TextView
         android:id="@+id/textWX"
         android:layout_width="40dp"
         android:layout_height="20dp"         
         android:gravity="center"
         android:layout_weight="1"
         android:text="微信账号登入" />
                        <TextView
         android:id="@+id/textWB"
         android:layout_width="40dp"
         android:layout_height="20dp"
         android:gravity="center"
          android:layout_weight="1"
         android:text="新浪微博登入" />
            
                                    <TextView
         android:id="@+id/textQQ"
         android:layout_width="40dp"
         android:layout_height="20dp"
         android:gravity="center"
          android:layout_weight="1"
         android:text="QQ账号登入" />
            
            
             </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content" 
          android:paddingTop="50dp"
          >

          <TextView
              android:id="@+id/textreg"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="没账号，快速注册" />
      </LinearLayout>
      

</LinearLayout>
