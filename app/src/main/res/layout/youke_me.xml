<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    
      <LinearLayout
        android:layout_width="match_parent"
          android:layout_height="140dp"
    android:background="#06b2d8"
        android:paddingTop="10dp"
        android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/imagesetsy"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:src="@drawable/set" 
        android:layout_marginRight="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="10dp"
        android:orientation="horizontal" >

      
    <Button
        android:id="@+id/dengru"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="#ffffff"
        android:textColor="#06b2d8"
        android:layout_marginLeft="10dp"
        android:text="登入" />

    <TextView
        android:id="@+id/QR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:text="快速注册>" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left"
        android:paddingTop="25dp"
        android:orientation="horizontal" >
    
            <ImageView
        android:id="@+id/imagewxo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="1"
     
        android:src="@drawable/weixin1" />

            <TextView
                android:id="@+id/WX"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#ffffff"
                android:layout_weight="1"
              
                android:text="微信登入" />
    
            <ImageView
        android:id="@+id/imagewbo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:src="@drawable/weibo1" />
            
                <TextView
        android:id="@+id/WB"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="#ffffff"
        android:layout_weight="1"
        android:text="微博登入" />



    <ImageView
        android:id="@+id/imageqqo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="1"    
        android:src="@drawable/qq1" />

    <TextView
        android:id="@+id/QQ"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="1"
           android:textColor="#ffffff"
        android:text="QQ登入" />
    
    
        </LinearLayout>
        
</LinearLayout>

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="10dp"
         
        
        android:orientation="horizontal" >
    
       
          <ImageView
       android:id="@+id/lishi"
       android:layout_width="50dp"
       android:layout_height="50dp"
       android:layout_weight="1"
       android:src="@drawable/histr" 
       android:paddingBottom="10dp"
       android:background="@drawable/border"/>

          <ImageView
              android:id="@+id/shoucang"
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:layout_weight="1"
              android:src="@drawable/collection" 
              android:paddingBottom="10dp"
              android:background="@drawable/border"/>

    </LinearLayout>
    
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="10dp"
        android:background="@drawable/border"
         android:paddingBottom="5dp"
        android:orientation="horizontal" >
          
        
            <ImageView
        android:id="@+id/dishiguanbi"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/alarm" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="定时关闭" 
              />
          
        </LinearLayout>
        
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:background="@drawable/border"
        android:orientation="horizontal"
         >
          
        
            <ImageView
        android:id="@+id/imaginight"
        android:layout_width="30dp"
        android:layout_height="30dp"
        
        android:src="@drawable/night" />

            <TextView
                android:id="@+id/yejianboshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="夜间模式" />
          
        </LinearLayout>
                <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:background="@drawable/border"
        android:orientation="horizontal" >
          
        
            <ImageView
        android:id="@+id/imageyijian"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/reback" />

            <TextView
                android:id="@+id/yijianfankui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
             
                android:text="意见反馈" />
             </LinearLayout>
                <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:background="@drawable/border"
        android:orientation="horizontal" >
          
        
            <ImageView
        android:id="@+id/imageguanyu"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/about" />

            <TextView
                android:id="@+id/guanyu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="关于" />
          
        </LinearLayout>

                <Button
                    android:id="@+id/exit"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="#06b2d8"

                    android:textColor="#ffffff"
                    android:text="退出程序" />

</LinearLayout>
